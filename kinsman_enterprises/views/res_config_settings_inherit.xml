<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
   <record id="res_config_settings_inherit_view" model="ir.ui.view">
       <field name="name">res.config.settings.inherit.view</field>
       <field name="model">res.config.settings</field>
       <field name="inherit_id" ref="website.res_config_settings_view_form"/>
       <field name="arch" type="xml">
           <xpath expr="//div[@id='hide_add_to_cart_setting']" position="after">
               <div class="col-12 col-lg-6 o_setting_box" id="disable_price_and_cart">
                   <div class="o_setting_left_pane">
                       <field name="disable_price_and_cart"/>
                   </div>
                   <div class="o_setting_right_pane">
                       <label for="disable_price_and_cart" string="Disable Price and Cart"/>
                       <div class="text-muted mb16">
                           Disable Price and Cart in eCommerce Product View
                       </div>
                   </div>
               </div>
           </xpath>
       </field>
   </record>
</odoo>